---
import { languages } from "@cv";
import Section from "../Section.astro";
---

<Section title="Idiomas">
  <ul class="idioma-nivel">
    {languages.map(lang => (
      <li>
        <strong class="idioma-nombre">{lang.language}</strong> {lang.fluency}
      </li>
    ))}
  </ul>
</Section>

<style>
.idioma-nivel {
  color: #666;
  font-size: 14.4px;
  margin: 1em 0 0 0;
  list-style: none;
  padding: 0;
}
.idioma-nivel li {
  position: relative;
  margin-bottom: 0.5em;
  padding-left: 1.5em; /* Aumenta el espacio para el punto */
}
.idioma-nivel li::before {
  content: "â€¢";
  position: absolute;
  left: 0;
  top: 0.1em; /* Ajusta verticalmente si es necesario */
  color: #666;
  font-size: 1.2em;
  line-height: 1.2;
}
.idioma-nombre {
  font-weight: bold;
  font-size: 1.2em;
  color: #222;
}
</style>