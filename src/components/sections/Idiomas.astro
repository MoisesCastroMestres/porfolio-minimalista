---
import { languages } from "@cv";
import Section from "../Section.astro";
---

<Section title="Idiomas">
  <ul class="idioma-nivel">
    {languages.map(lang => (
      <li class="idioma-li">
        <strong class="idioma-nombre">{lang.language}</strong>: {lang.fluency}
      </li>
    ))}
  </ul>
</Section>

<style>
.idioma-nivel {
  color: #666;
  font-size: 14.4px;
  margin: 1em 0 0 0;
}
.idioma-nombre {
  font-weight: bold;
  font-size: 1.2em;
  color: #222;
}
.idioma-nivel li {
  margin-bottom: 0.5em;
}


.idioma-li {
  padding-left: 77px;      
  text-indent: -77px;      
}
</style>