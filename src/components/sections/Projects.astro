---
import Section from "../Section.astro";
import { projects } from '@cv'
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(({ url, description, highlights, name, isActive }) => (
        <li>
          <a href={url} title={`Ver el proyecto ${name}`} target="_blank" rel="noopener noreferrer" class="project-link">
            <article>
              <header>
                <h3>{name}</h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlight) => (
                  <span>{highlight}</span>
                ))}
              </footer>
            </article>
          </a>
        </li>
      ))
    }
  </ul>
</Section>

<style>
ul {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: 1.2rem;
  padding: 0;
  margin: 0;
  list-style: none;
}

.project-link {
  display: block;
  text-decoration: none;
  color: inherit;
  height: 100%;
}

article {
  border-radius: 8px;
  border: 1px solid #f2f2f2;
  gap: 16px;
  display: flex;
  flex-direction: column;
  padding: 16px;
  height: 100%;
  transition: box-shadow 0.18s, transform 0.18s, border-color 0.18s, background 0.18s;
  background: #fff;
  box-shadow: 0 1px 4px 0 rgba(0,0,0,0.04);
}

.project-link:hover article,
.project-link:focus article {
  box-shadow: 0 8px 24px 0 rgba(0,0,0,0.13);
  transform: translateY(-2px) scale(1.025);
  border-color: #b3b3b3;
  background: #f8fafc;
}

article header {
  flex: 1;
}

article h3 {
  margin-bottom: 4px;
  transition: color 0.18s;
}

.project-link:hover h3,
.project-link:focus h3 {
  color: #005fa3;
  /* text-decoration: underline wavy #005fa3 1.5px; */
  text-underline-offset: 3px;
}

article p {
  font-size: 0.85rem;
  line-height: 1.3rem;
  margin-bottom: 4px;
  color: #444;
}

footer {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
  font-size: 0.7rem;
}

footer span {
  border-radius: 6px;
  background: #eee;
  color: #444;
  font-size: 0.7rem;
  font-weight: 500;
  padding: 0.2rem 0.6rem;
}

@media (max-width: 600px) {
  ul {
    grid-template-columns: 1fr;
    gap: 0.8rem;
  }
  article {
    padding: 12px;
  }
  article h3 {
    font-size: 1.1rem;
  }
  article p {
    font-size: 0.95rem;
  }
}

@media (min-width: 601px) {
  article {
    padding: 24px;
    gap: 20px;
  }
}

.project-link,
.project-link:link,
.project-link:visited,
.project-link:hover,
.project-link:focus,
.project-link:active {
  color: inherit;
  text-decoration: none;
}
</style>