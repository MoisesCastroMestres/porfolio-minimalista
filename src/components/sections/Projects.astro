---
import Section from "../Section.astro";
import { projects } from '@cv'
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(({ url, description, highlights, name, isActive }) => (
        <li>
          <article>
            <header>
              <a href={url} title={`Ver el proyecto ${name}`} target="_blank" rel="noopener noreferrer">
                <h3>{name}</h3>
              </a>
              <p>{description}</p>
            </header>
            <footer>
              {highlights.map((highlight) => (
                <span>{highlight}</span>
              ))}
            </footer>
          </article>
        </li>
      ))
    }
  </ul>
</Section>

<style>
ul {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: 1.2rem;
  padding: 0;
  margin: 0;
  list-style: none;
}

article {
  border-radius: 8px;
  border: 1px solid #f2f2f2;
  gap: 16px;
  display: flex;
  flex-direction: column;
  padding: 16px;
  height: 100%;
  transition: box-shadow 0.18s, transform 0.18s, border-color 0.18s;
  cursor: pointer;
  background: #fff;
}

article:hover,
article:active {
  box-shadow: 0 4px 16px 0 rgba(0,0,0,0.10);
  transform: scale(1.02);
  border-color: #d1d5db;
}

article header {
  flex: 1;
}

article h3 {
  margin-bottom: 4px;
  transition: color 0.18s;
}

article a {
  color: #111;
  text-decoration: none;
  display: inline-block;
  width: 100%;
  transition: color 0.18s;
}

article a:hover h3,
article a:focus h3 {
  color: #0077cc;
  text-decoration: underline;
}

article p {
  font-size: 0.85rem;
  line-height: 1.3rem;
  margin-bottom: 4px;
  color: #444;
}

footer {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
  font-size: 0.7rem;
}

footer span {
  border-radius: 6px;
  background: #eee;
  color: #444;
  font-size: 0.7rem;
  font-weight: 500;
  padding: 0.2rem 0.6rem;
}

@media (max-width: 600px) {
  ul {
    grid-template-columns: 1fr;
    gap: 0.8rem;
  }
  article {
    padding: 12px;
  }
  article h3 {
    font-size: 1.1rem;
  }
  article p {
    font-size: 0.95rem;
  }
}
</style>